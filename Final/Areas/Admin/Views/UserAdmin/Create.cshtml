@model KStore.Models.UserAdmin

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card">
            <div class="card-body">
                <h4>Thêm mới Admin</h4>
                <h2 style="color:red">@ViewBag.ThongBao</h2>
                <div class="m-t-15">
                    <form id="form-validation">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Tên Admin*</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" name="nameAdmin">
                                @Html.ValidationMessageFor(model => model.nameAdmin, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Tài khoản*</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" name="userName">
                                @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Mật khẩu*</label>
                            <div class="col-md-5">
                                <input type="password" class="form-control" name="PassWord">
                                @Html.ValidationMessageFor(model => model.passWord, "", new { @class = "text-danger" })
                            </div>
                        </div>
               
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Số điện thoại*</label>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="phone">
                                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Trạng thái hoạt động*</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" name="access">
                                @Html.ValidationMessageFor(model => model.access, "", new { @class = "text-danger" })
                            </div>
                        </div>
               

                        <div class="form-group text-left">
                            <button class="btn btn-success btn-tone m-r-5">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <div>
                @Html.ActionLink("Quay về danh sách Admin", "Index")
            </div>
        </div>

    </div>
}



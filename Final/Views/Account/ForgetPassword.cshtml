@model KStore.Models.Customer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="vh-50">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <h1 class="uppercase mb-0" style="font-weight: bold; text-align: center; padding-bottom: 27px;">QUÊN MẬT KHẨU</h1>
                @using (Html.BeginForm("ForgetPassword", "Account"))
                {
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="text" class="form-control form-control-lg" name="username" id="username" autocomplete="email" placeholder="Nhập Email ..." value="" required data-validation-error-msg="Email không được để trống" data-validation="required" />
                        <label class="form-label" for="form3Example3">Nhập Email</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input class="form-control form-control-lg" type="password" name="password" id="password" autocomplete="current-password" required data-validation-error-msg="Mật khẩu không được để trống" data-validation="required" placeholder="Nhập mật khẩu ..."/>
                        <label class="form-label" for="form3Example4">Mật khẩu</label>
                    </div>
                    <div class="form-outline mb-3">
                        <input class="form-control form-control-lg" type="password" name="confirmPassword" id="confirmPassword" autocomplete="current-password" required data-validation-error-msg="Mật khẩu không được để trống" data-validation="required" placeholder="Nhập lại mật khẩu ..."/>
                        <label class="form-label" for="form3Example4">Nhập lại mật khẩu</label>
                    </div>

              

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Success
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Bạn chưa có tài khoản <a href="@Url.Action("Register","Account")"
                                                     class="link-danger">Nhấp vào đây để đăng ký</a>
                        </p>
                    </div>
                }


            </div>
        </div>
    </div>
</section>
<script>
    @if (TempData["SweetAlertMessage"] != null)
    {
        <text>
        Swal.fire({
            title: '@TempData["SweetAlertMessage"]',
            icon: '@TempData["SweetAlertType"]',
            showConfirmButton: false,
            timer: 2000
        });
        </text>
    }
</script>
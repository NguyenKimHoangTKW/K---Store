 
@{var usercus = Session["Customer"] as ClotheSstore.Models.Customer;}
 <!-- Right Elements -->
<div class="flex-col hide-for-medium flex-right">
    <ul class="header-nav header-nav-main nav nav-right  nav-uppercase">
        <li class="account-item has-icon">
            <div class="header-button">
                @if (usercus == null)
                {
                    <a href="@Url.Action("Login","Account")"
                       class="nav-top-link nav-top-not-logged-in icon button circle is-outline is-small"
                       data-open="#login-form-popup" style="color: black; width: 102px;">
                        Đăng nhập
                    </a>
                    <a href="@Url.Action("Register","Account")"
                       class="nav-top-link nav-top-not-logged-in icon button circle is-outline is-small"
                       data-open="#login-form-popup" style="color: black; width: 95px;">
                        Đăng ký
                    </a>
                }
                else
                {

                    <i> 🙆‍ Xin Chào : @usercus.nameCustomer</i>
                    <a href="@Url.Action("TitleUser","Account", new {id = usercus.idCustomer})"
                       class="nav-top-link nav-top-not-logged-in icon button circle is-outline is-small"
                       data-open="#login-form-popup" style="color: black; width: 215px ">
                        Xem thông tin tài khoản
                    </a>
                    <a href="@Url.Action("Logout","Account")"
                       class="nav-top-link nav-top-not-logged-in icon button circle is-outline is-small"
                       data-open="#login-form-popup" style="color: black; width: 95px;">
                        Đăng xuất
                    </a>
                }


            </div>

        </li>


            @Html.Action("GioHangPartial", "GioHang")

    </ul>
</div>

<!-- Mobile Right Elements -->
<div class="flex-col show-for-medium flex-right">
    <ul class="mobile-nav nav nav-right ">
        <li class="cart-item has-icon">

            <a href="/trangchu/workshirti.com/cart/index.html" class="header-cart-link off-canvas-toggle nav-top-link is-small" data-open="#cart-popup" data-class="off-canvas-cart" title="Cart" data-pos="right">

                <i class="icon-shopping-cart"
                   data-icon-label="0">
                </i>
            </a>


            <!-- Cart Sidebar Popup -->
            <div id="cart-popup" class="mfp-hide widget_shopping_cart">
                <div class="cart-popup-inner inner-padding">
                    <div class="cart-popup-title text-center">
                        <h4 class="uppercase">Giỏ hàng</h4>
                        <div class="is-divider"></div>
                    </div>
                    <div class="widget_shopping_cart_content">


                        <p class="woocommerce-mini-cart__empty-message">Không có sản phẩm nào trong giỏ</p>


                    </div>
                    <div class="cart-sidebar-content relative"></div>
                </div>
            </div>

        </li>
    </ul>
</div>

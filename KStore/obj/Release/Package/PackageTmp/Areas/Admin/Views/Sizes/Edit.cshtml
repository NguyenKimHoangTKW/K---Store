@model ClotheSstore.Models.Size

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idSize)
        <div class="card" style="margin-top:75px;">
            <div class="card-body">
                <h4>Sửa Size</h4>
                <h2 style="color:red">@ViewBag.ThongBao</h2>
                <div class="m-t-15">
                    <form id="form-validation">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Tên size*</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" name="nameSize" value="@Model.nameSize">
                                @Html.ValidationMessageFor(model => model.nameSize, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Mô tả*</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" name="status" value="@Model.status">
                                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        

                        <div class="form-group text-left">
                            <button class="btn btn-success btn-tone m-r-5">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <div>
                @Html.ActionLink("Quay về danh sách Size", "Index")
            </div>
        </div>
    </div>
}
@model IEnumerable<ClotheSstore.Models.Order>
@{
    ViewBag.Title = "InfoOrderPartial";
    int i = 0;
}

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Tên khách hàng</th>
                <th scope="col">Ngày đặt hàng</th>
                <th scope="col">Ngày giao dự kiến</th>
                <th scope="col">Trạng thái giao hàng</th>
                <th scope="col">Trạng thái thanh toán</th>
                <th scope="col">Chi tiết</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            i++;
            <tbody>
                <tr>
                    <th scope="row">#@i</th>
                    <th scope="row">@item.Customer.nameCustomer</th>
                    <td>@string.Format("{0:dd-MM-yyyyy}", item.orderDate)</td>
                    <td>@string.Format("{0:dd-MM-yyyyy}", item.deliveryDate)</td>
                    <td>@item.deliveryStatus</td>
                    @if (item.checkPay == true)
                    {
                        <td>Đã thanh toán</td>
                    }
                    else
                    {
                        <td>Chưa thanh toán </td>
                    }
                    <td>@item.Customer.phone</td>
                    <td>@item.Customer.address</td>
                    <td>
                        <a href="@Url.Action("OrderDetailDangGiaoHang","Order", new {id = item.idOrder})" class="order-details-link1">
                            Chi tiết
                        </a>
                    </td>
                </tr>
            </tbody>
        }

    </table>
</div>



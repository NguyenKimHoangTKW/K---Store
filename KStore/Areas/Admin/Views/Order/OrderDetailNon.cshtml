@model IEnumerable<ClotheSstore.Models.OrderDetail>
@{
    ViewBag.Title = "InfoOrderDetail";

    int i = 0;
}
<div class="table-responsive" style="margin-top:75px;">
    <table class="table table-hover e-commerce-table">
        <thead>
            <tr>

                <th>STT</th>
                <th>Tên sách</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>

                    <td>
                        #@i
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            <img class="img-fluid rounded" src="~/Areas/Admin/Images/Product_Images/@item.Product_Size.Product.thumb" style="max-width: 60px" alt="">
                            <h6 class="m-b-0">@item.Product_Size.Product.nameProduct</h6>
                        </div>
                    </td>
                    <td>@item.quantity</td>
                    <td>@string.Format("{0:#,0} VNĐ", item.price)</td>
                    <td>@string.Format("{0:#,0} VNĐ", item.TotalPrice)</td>
                </tr>

            }
            <tr>
                <td colspan="4" style="text-align:center;">
                    <p>Xác nhận đã xử lý đơn hàng</p>
                    <a href="@Url.Action("OrderDetailEdit","Order", new {id = Model.FirstOrDefault().idOrder})">
                        <button class="btn btn-success btn-tone m-r-5">Xác nhận</button>
                    </a>
                </td>
            </tr>


        </tbody>
    </table>
</div>
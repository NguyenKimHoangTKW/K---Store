@model ClotheSstore.Models.Customer

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="card">
    <div class="card-body">
        <h4>Thêm mới khách hàng</h4>
        <h2 style="color:red">@ViewBag.ThongBao</h2>
        <div class="m-t-15">
            <form id="form-validation">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label control-label">Tên khách hàng*</label>
                    <div class="col-md-5">
                        <input type="text" class="form-control" name="nameCustomer">
                        @Html.ValidationMessageFor(model => model.nameCustomer, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label control-label">Tài khoản*</label>
                    <div class="col-md-5">
                        <input type="text" class="form-control" name="userName">
                        @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label control-label">Mật khẩu*</label>
                    <div class="col-md-5">
                        <input type="password" class="form-control" name="passWord">
                        @Html.ValidationMessageFor(model => model.passWord, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label control-label">Ngày sinh*</label>
                    <div class="col-md-5">
                        <input type="date" class="form-control" name="birthDay">
                        @Html.ValidationMessageFor(model => model.birthDay, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label control-label">Email</label>
                    <div class="col-md-5">
                        <input type="email" class="form-control" name="email">
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label control-label">Địa chỉ*</label>
                    <div class="col-md-5">
                        <textarea  name="address" rows="4" cols="50"> </textarea>
                        @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label control-label">Số điện thoại*</label>
                    <div class="col-md-5">
                        <input type="number" class="form-control" name="phone">
                        @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group text-left">
                    <button class="btn btn-success btn-tone m-r-5">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div>
        @Html.ActionLink("Quay về danh sách sản phẩm", "Index")
    </div>
</div>
    
</div>   
}



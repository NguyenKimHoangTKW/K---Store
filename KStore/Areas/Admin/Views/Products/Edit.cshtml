@model ClotheSstore.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
s<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idProduct)
        @Html.HiddenFor(model => model.codeProduct)
        <div class="card" style="margin-top: 37px">
            <div class="card-body">
                <h4>Sửa sản phẩm</h4>
                <h2 style="color:red">@ViewBag.ThongBao</h2>
                <div class="m-t-15">
                    <form id="form-validation">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Tên Sản phẩm*</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" name="nameProduct" value="@Model.nameProduct">
                                @Html.ValidationMessageFor(model => model.nameProduct, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Mô tả*</label>
                            <div class="col-md-5">
                                @Html.TextAreaFor(model => model.describe)

                                @Html.ValidationMessageFor(model => model.describe, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Ảnh sản phẩm*</label>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.thumb, null, new { type = "file", @class = "form-control" })
                                <img src="~/Areas/Admin/Images/Product_Images/@Model.thumb" />
                                @Html.Hidden("oldimage", @Model.thumb)
                                @Html.ValidationMessageFor(model => model.thumb, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Trạng thái mở bán*</label>
                            <div class="col-md-5">
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-1" name="stock" value="true">
                                    <label for="switch-1"></label>
                                </div>

                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Giá sản phẩm*</label>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="price" value="@Model.price">
                                @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Danh mục sản phẩm*</label>
                            <div class="col-md-5">
                                @Html.DropDownList("idProductCategory", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.idProductCategory, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Ngày thêm sản phẩm*</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" name="updateDay" value="@string.Format("{0:yyyy-MM-dd}",Model.updateDay)">
                                @Html.ValidationMessageFor(model => model.updateDay, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="form-group text-left">
                            <button class="btn btn-success btn-tone m-r-5">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <div>
                @Html.ActionLink("Quay về danh sách sản phẩm", "Index")
            </div>
        </div>
    </div>
}
<script>
    CKEDITOR.replace('describe');
</script>
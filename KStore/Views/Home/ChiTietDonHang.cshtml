@model KStore.Models.Product
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Product_Size.FirstOrDefault(m => m.idProduct == Model.idProduct) == null)
{
    <section class="breadcrumb-section set-bg" data-setbg="/Content/assets/img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>@Model.nameProduct</h2>
                        <div class="breadcrumb__option">
                            <a href="@Url.Action("Index","Home")">Trang chủ</a>
                            <a href="./index.html">@Model.ProductCategory.nameProductCategory</a>
                            <span>@Model.nameProduct</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__item">
                            <img class="product__details__pic__item--large"
                                 src="/Areas/Admin/Images/Product_Images/@Model.thumb" alt="">
                        </div>

                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__text">
                        <h3>@Model.nameProduct</h3>

                        <div class="product__details__price">@string.Format("{0:#,0} VNĐ", Model.price)</div>
                        <input type="text" class="form-control" min="1" value="Sản phẩm tạm hết hàng" readonly="False" style="text-align:center">
                        <ul>

                            <li><b>Trạng thái</b> <span>Tạm hết hàng</span></li>
                            <li><b>Shipping</b> <span>3 - 5 ngày <samp> kể từ ngày đặt hàng</samp></span></li>
                            <li><b>Weight</b> <span>0.5 kg</span></li>

                        </ul>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                                   aria-selected="true">Mô tả sản phẩm</a>
                            </li>

                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabs-1" role="tabpanel">
                                <div class="product__details__tab__desc">
                                    <p>
                                        @Html.Raw(Model.describe)
                                    </p>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Product Details Section End -->
    <!-- Related Product Section Begin -->
    <!-- Related Product Section End -->
}
else
{
    <section class="breadcrumb-section set-bg" data-setbg="/Content/assets/img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>@Model.nameProduct</h2>
                        <div class="breadcrumb__option">
                            <a href="@Url.Action("Index","Home")">Trang chủ</a>
                            <a href="./index.html">@Model.ProductCategory.nameProductCategory</a>
                            <span>@Model.nameProduct</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__item">
                            <img class="product__details__pic__item--large"
                                 src="/Areas/Admin/Images/Product_Images/@Model.thumb" alt="">
                        </div>

                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__text">
                        <h3>@Model.nameProduct</h3>

                        <div class="product__details__price">@string.Format("{0:#,0} VNĐ", Model.price)</div>


                        @using (Html.BeginForm("ThemGioHangChiTiet", "GioHang", new { ms = Model.idProduct, url = Request.Url.ToString() }))
                        {
                            <div class="product__details__quantity">
                                <div class="quantity">
                                    <div class="pro-qty">
                                        <input type="text" name="txtSoLuong" value="1">
                                    </div>
                                </div>
                            </div>

                            @Html.Action("SizeTheoSanPham", "Home", new { id = Model.idProduct })
                            <button class="primary-btn">THÊM VÀO GIỎ HÀNG</button>
                        }
                        <ul>
                            @if (Model.stock == true)
                            {


                                <li><b>Trạng thái</b> <span>Còn hàng</span></li>
                            }
                            else
                            {
                                <li><b>Trạng thái</b> <span>Tạm hết hàng</span></li>
                            }
                            <li><b>Shipping</b> <span>3 - 5 ngày <samp> kể từ ngày đặt hàng</samp></span></li>
                            <li><b>Weight</b> <span>0.5 kg</span></li>

                        </ul>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                                   aria-selected="true">Mô tả sản phẩm</a>
                            </li>

                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabs-1" role="tabpanel">
                                <div class="product__details__tab__desc">
                                    <p>
                                        @Html.Raw(Model.describe)
                                    </p>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Product Details Section End -->
    <!-- Related Product Section Begin -->
    
    <!-- Related Product Section End -->
}
<!-- Breadcrumb Section Begin -->

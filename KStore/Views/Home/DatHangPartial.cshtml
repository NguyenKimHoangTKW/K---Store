@model KStore.Models.Product
<!-- Modal -->
@if (Model.Product_Size.FirstOrDefault(m => m.idProduct == Model.idProduct) == null)
{
    <div class="modal fade bd-example-modal-lg" id="DatHang-@Model.idProduct" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">THÔNG TIN SẢN PHẨM</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div style="text-align:center;">
                    <img src="~/Areas/Admin/Images/Product_Images/@Model.thumb" alt="" class="avatar-lg rounded" style="max-width: 150px">
                </div>
                    <div class="modal-body">

                        <form id="form-validation">

                            <div class="form-group row" style="text-align:center">
                                <div class="col-sm-10 " style="margin-left: 132px;">
                                    <input type="text" class="form-control" min="1" value="Sản phẩm tạm hết hàng" readonly="False" style="text-align:center"> 
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label control-label">Tên sản phẩm :</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@Model.nameProduct" readonly="Fasle">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label control-label">Giá bán :</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@string.Format("{0:#,0} VNĐ",Model.price)" readonly="Fasle">
                                </div>
                            </div>
                            <div class="form-group row" style="text-align: left">
                                <label class="col-sm-2 col-form-label control-label">Thông tin sản phẩm :</label>
                                <div class="col-sm-10">
                                    @Html.Raw(Model.describe)
                                </div>
                            </div>

                        </form>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Thoát</button>
                        </div>
                   </div>
                
            </div>
        </div>
    </div>
}
else
{
    <div class="modal fade bd-example-modal-lg" id="DatHang-@Model.idProduct" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">THÔNG TIN SẢN PHẨM</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Html.BeginForm("ThemGioHangChiTiet", "GioHang", new { ms = Model.idProduct, url = Request.Url.ToString() }))
                {
                    <div style="text-align:center;">
                        <img src="~/Areas/Admin/Images/Product_Images/@Model.thumb" alt="" class="avatar-lg rounded" style="max-width: 150px">
                    </div>
                    <div class="modal-body">
                        <div>

                        </div>

                        <form id="form-validation">
                            @Html.Action("SizeTheoSanPham", "Home", new { id = Model.idProduct })
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label control-label">Chọn số lượng </label>
                                <div class="col-sm-2">
                                    <input type="number" class="form-control" name="txtSoLuong" min="1" value="1">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label control-label">Tên sản phẩm :</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@Model.nameProduct" readonly="Fasle">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label control-label">Giá bán :</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@string.Format("{0:#,0} VNĐ",Model.price)" readonly="Fasle">
                                </div>
                            </div>
                            <div class="form-group row" style="text-align: left">
                                <label class="col-sm-2 col-form-label control-label">Thông tin sản phẩm :</label>
                                <div class="col-sm-10">
                                    @Html.Raw(Model.describe)
                                </div>
                            </div>
                        </form>
                        <div class="modal-footer">
                            <button class="btn btn-primary">Đặt hàng</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Thoát</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
